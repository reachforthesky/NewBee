@model NewBee.Models.Deck

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Deck</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

@foreach (var card in Model.Cards)
{
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => card.Question)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => card.Question)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => card.Answer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => card.Answer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => card.Answer)
        </dt>
        <a asp-controller="Flashcards" asp-action="Edit" asp-route-id="@card.Id">Edit</a> |
    </dl>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
